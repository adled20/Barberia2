<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barberia2.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Frame HeightRequest="150" WidthRequest="150">
                <Image Source="appicon.png"> </Image>
            </Frame>
            <Label Text="Iniciar Sesión"> </Label>
            
                <Grid ColumnDefinitions="*"   RowDefinitions="auto,auto,auto,auto" >
                <Entry Margin="0,0,0,20" x:Name="Correo"  HorizontalOptions="Center" WidthRequest="300" Placeholder="Ingrese su usuario"></Entry>
                <Entry Margin="0,0,0,20" x:Name="Contraseña" Grid.Row="1" IsPassword="True" WidthRequest="300" Text="" HorizontalOptions="Center" Placeholder="Ingrese su contraseña"></Entry>
                <Button Margin="0,0,0,20" Clicked="Ingreso" Grid.Row="2" HorizontalOptions="Center" Text="Ingresar"></Button>
                    <Button Grid.Row="3" Clicked="Navegacion" HorizontalOptions="End" Text="Crear Cuenta" Margin="0,0,15,0"></Button>
                </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
