<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barberia2.Cortes"
             Title="Cortes">
    
        <ScrollView>
        <CollectionView ItemsSource="{Binding ListaCortes}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                             Span="3" />
                <!-- 3 columnas -->
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Grid.Column="0" Padding="4"  Margin="10,0,10,0" WidthRequest="120" HeightRequest="120">
                        <Grid   RowDefinitions="*,*">
                            <ImageButton Aspect="AspectFill" Source="{Binding imagen}" Grid.Row="0" Clicked="DetalleCorte" CommandParameter="{Binding Id}"></ImageButton>
                            <Label Text="{Binding nombre}" VerticalOptions="End" Grid.Row="1"></Label>
                            
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
   
</ContentPage>