<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barberia2.DetalleCorte"
             Title="DetalleCorte">
    <VerticalStackLayout Padding="20">
        <Grid RowDefinitions="*,*,*,*,*,*">
            <Label HorizontalOptions="Center" x:Name="nombreLabel" FontSize="24" />
            <Image Grid.Row="0" x:Name="imagenCorte" HeightRequest="200" />
            <Label Grid.Row="1" x:Name="precioLabel" FontSize="18" />
            <Label Grid.Row="2" x:Name="duracionLabel" FontSize="18" />
            <Label Grid.Row="3" x:Name="tipoLabel" FontSize="18" />
            <Label Grid.Row="4" x:Name="descripcionLabel" FontSize="18" />
            <Button Grid.Row="5" Text="Agendar_cita" Clicked="Agendar_cita"/>

        </Grid>
    </VerticalStackLayout>
</ContentPage>